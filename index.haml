%html
  %head
    %title 10 Best Things To Do In Singapore 2020 - 2021 | Pelago
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "UTF-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width", :name => "viewport"}
    %link{:href => "css/global.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/home.css", :rel => "stylesheet", :type => "text/css"}
    <script src="./js/jquery-3.5.1.min.js"></script>
    <script src="./js/slick.min.js"></script>
  %body
    %header
      .c-header
        .c-container.c-header__container
          %img.c-header__logo{ src: './images/logo.svg' }
          .c-header__text A Singapore Airlines Venture
    .c-body
      .c-breadcrumb
        .c-container.c-breadcrumb__container
          .c-breadcrumb__link Singapore
          .c-breadcrumb__arrow=">"
          .c-breadcrumb__link.c-breadcrumb__link--active Singapore Highlights
      .c-banner
        .c-container.c-banner__container
          %img.c-banner__image{ src: './images/banner.png' }
          %h1.c-banner__title Explore the best of Singapore
          .c-banner__text A bustling city-state in the heart of Southeast Asia, Singapore is known for being a melting pot of cultures, as well as its pervasive greenary amidst urban landscape.
      .c-main
        .c-container.c-main__container
          %h1.c-main__title Singapore Highlights
          .c-main__items
            %a.c-main-item{ href: 'hidden-gems.html' }
              .c-main-item__label.c-main-item__label--blue
                %span Do
              .c-main-item__card
                %img.c-main-item__image{ src: './images/hidden-gems.jpg' }
              .c-main-item__info-wrapper
                .c-main-item__info-title Hidden Gems
                .c-main-item__info-description See a different side of Singapore and discover all sorts of unique hidden gems
                .c-main-item__tags
                  .c-main-item__tag-item Hidden Gem
            %a.c-main-item{ href: 'rooftop-bar.html' }
              .c-main-item__label.c-main-item__label--purple
                %span Drink
              .c-main-item__card
                %img.c-main-item__image{ src: './images/rooftop-bar.jpg' }
              .c-main-item__info-wrapper
                .c-main-item__info-title Rooftop Bars
                .c-main-item__info-description Sip on amazing drinks and soak up epic views
                .c-main-item__tags
                  .c-main-item__tag-item Local Favourite
                  .c-main-item__tag-item Couples
    %footer
      .c-footer
        .c-container.c-footer__container
          %img.c-footer__logo{ src: './images/logo.svg' }

:javascript
  $(document).ready(function(){
   var stickFooter = function () {
      if ($(window).height() > $('body').innerHeight()) {
        $('body').css('height', $(window).height());
        $('body').css('overflow', 'hidden');
      } else {
        $('body').removeAttr('style');
      }
   }

    var slickItem = $('.c-main__items');
    slickItem.on('init', function(event, slick){
      $('.c-main-item__image').addClass('c-main-item__after-render-image');
      $('.c-main-item__card').addClass('c-main-item__after-render-card');
    });

    var setting = {
      arrows: false,
      slidesToShow: 2,
      slidesToScroll: 2,
      autoplay: false,
      infinite: false,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            infinite: false,
            slidesToShow: 2,
            slidesToScroll: 2,
          }
        },
        {
          breakpoint: 560,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: false,
            dots: true,
          }
        }
      ]
    }

    var settingMobile =  {
      dots: true,
      arrows: false,
      infinite: false,
    }

    slickItem.slick(setting);

    stickFooter();
    $(window).on('resize orientationchange', function() {
      slickItem.slick('refresh');
      console.log(12313123);
      stickFooter();
    });
  });
